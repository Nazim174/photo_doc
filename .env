# Application Settings
NODE_ENV=production
PORT=3000
SESSION_SECRET=your_unique_session_secret_key_here

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Payment Configuration
TINKOFF_TERMINAL_KEY=your_tinkoff_terminal_key_here
TINKOFF_PASSWORD=your_tinkoff_password_here

# YooMoney Personal Wallet Configuration
# Получить access_token можно в настройках YooMoney кошелька
YOOMONEY_ACCESS_TOKEN=your_yoomoney_access_token_here
YOOMONEY_WALLET_NUMBER=your_yoomoney_wallet_number_here
# Альтернативные настройки YooMoney - Рабочие варианты
YOOMONEY_CLIENT_ID=your_yoomoney_client_id_here
YOOMONEY_REDIRECT_URI=https://your-domain.com/callback

# План A: Разработка с localhost
YOOMONEY_ALT_REDIRECT_URI=http://localhost:3000/callback
YOOMONEY_ALT_SERVER_URL=http://localhost:3000

# План B: Разработка с ngrok
YOOMONEY_NGROK_REDIRECT_URI=https://abc123.ngrok.io/callback
YOOMONEY_NGROK_SERVER_URL=https://abc123.ngrok.io

# План C: Production настройки
YOOMONEY_PROD_REDIRECT_URI=https://your-production-domain.com/auth/callback
YOOMONEY_PROD_SERVER_URL=https://your-production-domain.com

# Legacy YooKassa API (если все еще используется)
YOOKASSA_SHOP_ID=your_yookassa_shop_id_here
YOOKASSA_SECRET_KEY=your_yookassa_secret_key_here

# API Keys for Image Processing
REMOVEBG_API_KEY=your_removebg_api_key_here
CLIPDROP_API_KEY=your_clipdrop_api_key_here
TELEGRAM_WEBHOOK_URL=https://your-domain.vercel.app
SERVER_URL=https://your-domain.vercel.app

# Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here
API_KEY=your_api_key_here
BEARER_TOKEN=your_bearer_token_here

# Telegram Bot Configuration (Optional for production)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram Payments Configuration
# Токен провайдера платежей для интеграции с Telegram Payments API
# Получить можно в @BotFather или у поддерживаемого платежного провайдера (Stripe, PayPal и др.)
# Пример: TELEGRAM_PAYMENT_PROVIDER_TOKEN=123456789:TEST:token_from_provider
TELEGRAM_PAYMENT_PROVIDER_TOKEN=your_telegram_payment_provider_token_here

# Application URLs for YooMoney webhooks
WEBHOOK_SUCCESS_URL=https://your-domain.vercel.app/payment/success
WEBHOOK_FAIL_URL=https://your-domain.vercel.app/payment/fail