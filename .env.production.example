# Production Environment Variables for Vercel
NODE_ENV=production
PORT=3000

# YOUR PRODUCTION DOMAIN (replace with your actual domain)
SERVER_URL=https://your-domain.vercel.app
YOOMONEY_PROD_SERVER_URL=https://your-domain.vercel.app
YOOMONEY_PROD_REDIRECT_URI=https://your-domain.vercel.app/auth/callback

# Supabase Configuration (Production)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Payment Configuration
TINKOFF_TERMINAL_KEY=your_tinkoff_terminal_key_here
TINKOFF_PASSWORD=your_tinkoff_password_here

# YooMoney Production Configuration
YOOMONEY_ACCESS_TOKEN=your_production_yoomoney_access_token_here
YOOMONEY_WALLET_NUMBER=your_production_yoomoney_wallet_here
YOOMONEY_CLIENT_ID=your_production_client_id_here

# Telegram Bot Configuration (Optional for production)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here

# API Keys (Production)
REMOVEBG_API_KEY=your_production_removebg_key_here
CLIPDROP_API_KEY=your_production_clipdrop_key_here

# Application URLs for YooMoney webhooks
WEBHOOK_SUCCESS_URL=https://your-domain.vercel.app/payment/success
WEBHOOK_FAIL_URL=https://your-domain.vercel.app/payment/fail